<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="4sp"
                android:text="Osla"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:lineSpacingExtra="5sp"
                    android:text="Model"
                    android:textColor="@color/text_black"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="5sp"
                    android:text="A"
                    android:textColor="@color/text_black"
                    android:textSize="25sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/img_car_side_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/primaryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_bold"
                android:lineSpacingExtra="6sp"
                android:text="Primary controls"
                android:textColor="@color/text_black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primaryTextView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/frame_layout_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/btn_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:text="Temperature"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:text="A/C is ON"
                            android:textColor="@color/text_black"
                            android:textSize="11sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/frame_layout_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@drawable/btn_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:text="Battery"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:text="Saving mode"
                            android:textColor="@color/text_black"
                            android:textSize="11sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/frame_layout_energy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/btn_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:text="Energy"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:text="OFF"
                            android:textColor="@color/text_black"
                            android:textSize="11sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/secondaryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_bold"
                android:lineSpacingExtra="6sp"
                android:text="Secondary controls"
                android:textColor="@color/text_black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondaryTextView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/frame_layout_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="16dp">

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/btn_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:text="Camera"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:text="OFF"
                            android:textColor="@color/text_black"
                            android:textSize="11sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/frame_layout_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/btn_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:text="Music"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:text="Playlist #2"
                            android:textColor="@color/text_black"
                            android:textSize="11sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/frame_layout_door"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/btn_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:text="Door"
                            android:textColor="@color/text_black"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:text="Close"
                            android:textColor="@color/text_black"
                            android:textSize="11sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>