<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:text="Osla"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:lineSpacingExtra="5sp"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    android:text="Model"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="25sp"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/text_black"
                    android:textStyle="normal"
                    android:layout_marginLeft="9dp"
                    android:text="A"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="208dp"
                android:layout_gravity="center"
                android:background="@drawable/img_car_side_white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="31dp"
            >
            <TextView
                android:id="@+id/primaryTextView_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="6sp"
                android:text="Primary controls"
                android:layout_marginLeft="34dp"
                />
            <HorizontalScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primaryTextView_white"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/text_black"
                            android:text="Temperature"
                            android:layout_marginLeft="13dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/text_black"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:layout_gravity="bottom"
                            android:text="A/C is ON"
                            android:layout_marginLeft="13dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_white"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/text_black"
                            android:text="Battery"
                            android:layout_marginLeft="29dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/text_black"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:layout_gravity="bottom"
                            android:text="Saving mode"
                            android:layout_marginLeft="29dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_white"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/text_black"
                            android:text="Energy"
                            android:layout_marginLeft="29dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/text_black"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:layout_gravity="bottom"
                            android:text="OFF"
                            android:layout_marginLeft="29dp"/>
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="29dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="6sp"
                android:text="Secondary controls"
                android:layout_marginLeft="34dp"
                android:layout_marginBottom="17dp"
                />
            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/text_black"
                            android:text="Camera"
                            android:layout_marginLeft="13dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/text_black"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:layout_gravity="bottom"
                            android:text="OFF"
                            android:layout_marginLeft="13dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_white"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/text_black"
                            android:text="Music"
                            android:layout_marginLeft="29dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/text_black"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:layout_gravity="bottom"
                            android:text="Playlist #2"
                            android:layout_marginLeft="29dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_white"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/text_black"
                            android:text="Door"
                            android:layout_marginLeft="29dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/text_black"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="5sp"
                            android:layout_gravity="bottom"
                            android:text="Close"
                            android:layout_marginLeft="29dp"/>
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>